{
  "compilerOptions": {
    "target": "es2019",
    "lib": ["ES2019", "ESNext.Promise"],
    "module": "ESNext",
    "declaration": true,
    "declarationMap": false,
    "declarationDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "stripInternal": true,
    "outDir": "dist",
    "allowJs": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
